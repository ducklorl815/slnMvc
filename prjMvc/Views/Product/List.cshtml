@model IEnumerable<prjMvc.tProduct>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>
<div>
    @using (Html.BeginForm())
    {
        @*@:關鍵字 <input type="text" name="keyword" /><input type="submit" value="查詢" />*@
        @:關鍵字 @Html.TextBox("txtkeyword", "", new { @class = "form-control" })
        <input type="submit" value="查詢" />
    }
</div>
<p>
    @Html.ActionLink("新增產品", "Create")
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            序
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fQty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fActived)
        </th>
        <th></th>
    </tr>
    @{
        int count = 0;

        foreach (var item in Model)
        {
            count++;
            <tr>
                <td>
                    @count
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fQty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fActived)
                </td>
                <td>
                    @Html.ActionLink("編輯", "Edit", "Product", new { id = item.fId }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("刪除", "Delete", "Product", new { id = item.fId },
                        new { onclick = "return confirm('確定要刪除嗎?')", @class = "btn btn-success" })
                </td>
            </tr>
        }
    }
</table>
