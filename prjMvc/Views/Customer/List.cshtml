@using prjMvc.Models
@model List<CCustomer>

@{
    ViewBag.Title = "List";
}
<a href="~/Customer/New">新增客戶</a>
<h2>客戶一欄表</h2>
@using (Html.BeginForm())
{
    @*@:關鍵字 <input type="text" name="keyword" /><input type="submit" value="查詢" />*@
    @:關鍵字 @Html.TextBox("txtkeyword","", new { @class = "form-control" }) <input type="submit" value="查詢" />
}
@*<form method="post">

    </form>*@
<div>
    <table class="table">
        <tr>
            <td>序</td>
            <td>姓名</td>
            <td>電話</td>
            <td>郵件</td>
            <td>地址</td>
            <td>密碼</td>
            <td>狀態</td>
            <td>修改</td>
            <td>刪除</td>
        </tr>
        @{
            int count = 0;
            foreach (CCustomer c in Model)
            {
                count++;
                <tr>
                    <td>@c.fid</td>
                    <td>@c.fName</td>
                    <td>@c.fPhone</td>
                    <td>@c.fAddress</td>
                    <td>@c.fAddress</td>
                    <td>@c.fPassword</td>
                    <td>@c.fActived</td>
                    <td>
                        @Html.ActionLink("修改", "Edit", "Customer", new { id = c.fid },
                        null)
                    </td>

                    <td>
                        @Html.ActionLink("刪除", "Delete", "Customer", new { id = c.fid },
                   new { onclick = "return confirm('確定要刪除嗎?')" })
                    </td>
                </tr>
            }
        }




    </table>




</div>

